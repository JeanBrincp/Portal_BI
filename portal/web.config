<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Handler para wfastcgi: ajuste scriptProcessor para seu python/wfastcgi -->
      <add name="PythonHandler" path="*" verb="*" modules="FastCgiModule" scriptProcessor="C:\\Program Files\\Python312\\python.exe|C:\\Program Files\\Python312\\Lib\\site-packages\\wfastcgi.py" resourceType="Unspecified" requireAccess="Script" />
    </handlers>

    <!-- Evitar que o IIS tente tratar arquivos estáticos como requisições ao app -->
    <rewrite>
      <rules>
        <rule name="Static Files" stopProcessing="true">
          <match url="^static/.*" ignoreCase="true" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering removeServerHeader="true" />
    </security>

    <httpErrors errorMode="DetailedLocalOnly" />
  </system.webServer>

  <appSettings>
    <!-- WSGI_HANDLER deve apontar para o callable WSGI da sua app Django -->
    <add key="WSGI_HANDLER" value="portal.wsgi.application" />
    <!-- PYTHONPATH deve apontar para a raiz onde está manage.py -->
    <add key="PYTHONPATH" value="C:\\inetpub\\wwwroot\\portal_bi" />
    <add key="DJANGO_SETTINGS_MODULE" value="portal.settings" />
    <!-- Opcional: DEBUG controlado por variável de ambiente ou appSetting -->
    <add key="DJANGO_DEBUG" value="False" />
  </appSettings>
</configuration>